<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main class="backgroundImage">
    <% if (errorMessage) { %>
      <div class="user-message user-message--error"><%= errorMessage %> </div>
 <% } %> 
    <form class="login-form" action="/signup" method="POST">
      <div class="form-control">
        <label for="email">E-Mail</label>
        <input class="<%= validationErrors.find(e=>e.param === 'email') ? 'invalid': '' %>" type="email" required name="email" id="email" value="<%= prevInput.email%>"/>
      </div>

      <div class="form-control innerSign">
        <label for="password">Password</label>
        <input class="<%= validationErrors.find(e=>e.param === 'password') ? 'invalid': '' %>" type="password" required name="password" id="password" value="<%= prevInput.password %>" />
      </div>
 
      <div class="form-control innerSign">
        <label for="confirmPassword">Confirm Password</label>
        <input class="<%= validationErrors.find(e=>e.param === 'confirmPassword') ? 'invalid': '' %>" type="password" required name="confirmPassword" id="confirmPassword"  value="<%= prevInput.confirmPassword%>"/>
      </div>

      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button class="btn innerSign" type="submit">Signup</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>
</body>
